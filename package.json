{
  "name": "first-aid-manager",
  "version": "1.0.0",
  "description": "Sistema di gestione per kit di primo soccorso con invio email automatico",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:local": "node server-boot-3002.js",
    "start:https": "node server-https.js",
    "start:otel": "node -r ./apm/otel.js server-boot-3002.js",
    "install-pdf-deps": "node ensure-deps.js",
    "postinstall": "npm run install-pdf-deps",
    "check-deps": "node test-self-check.js",
    "test": "node tests/resendService.test.js && node tests/api-health.test.js && node tests/api-health-head.test.js && node tests/cors-preflight.test.js",
    "test:resend": "node tests/resendService.test.js",
    "test:load": "artillery run tests/load.yaml"
  },
  "keywords": [
    "first-aid",
    "inventory",
    "email",
    "brevo",
    "management"
  ],
  "author": "First Aid Manager Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "connect-session-sequelize": "^7.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "helmet": "^7.0.0",
    "handlebars": "^4.7.8",
    "joi": "^18.0.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.0.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^21.6.1",
    "resend": "^6.2.2",
    "sequelize": "^6.37.7",
    "sib-api-v3-sdk": "^8.5.0",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "xlsx": "^0.18.5",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.52.1",
    "@opentelemetry/resources": "^1.27.0",
    "@opentelemetry/semantic-conventions": "^1.27.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "artillery": "^2.0.0-30"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "bugs": {
    "url": "https://github.com/username/first-aid-manager/issues"
  },
  "homepage": "."
}
